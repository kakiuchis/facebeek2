<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <%= form_for(@topic, html: {class: 'form-inline'}, remote: true) do |f| %>
    <%= f.error_messages! %>
    <%= f.text_field :content, class: 'form-control', placeholder: "今なにしてる？" %>
    <%= f.submit '投稿', class: 'btn btn-primary' %>
    <% end %>
    <br/>
    <div id="topics_area">
      <%= render partial: 'index', locals: { topics: @topics, friends: @friends } %>
    </div>
  </div>
</div>